{
  "name": "@banejs/exceptions",
  "version": "1.0.0-beta.2",
  "description": "BaneJS Exceptions",
  "scripts": {
    "test": "npm run test:type-check && npm run test:tslint && npm run test:jest",
    "test:type-check": "tsc --noEmit",
    "test:tslint": "tslint --project tsconfig.json --format stylish",
    "test:jest": "jest --coverage --detectOpenHandles",
    "build": "npm run build:clean && npm run build:types && npm run build:js && npm run build:copy",
    "build:clean": "rm -rf ./build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\"",
    "build:copy": "cp package.json README.md CHANGELOG.md LICENSE build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/banejs/exceptions.git"
  },
  "keywords": [
    "banejs",
    "exceptions",
    "typescript"
  ],
  "author": "Anton Drobot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/banejs/exceptions/issues"
  },
  "homepage": "https://github.com/banejs/exceptions#readme",
  "devDependencies": {
    "@babel/cli": "~7.7.7",
    "@babel/core": "~7.7.7",
    "@babel/plugin-proposal-class-properties": "~7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "~7.7.7",
    "@babel/preset-env": "~7.7.7",
    "@babel/preset-typescript": "~7.7.7",
    "@types/jest": "~24.0.24",
    "@types/node": "~12.12.21",
    "babel-core": "~7.0.0-bridge.0",
    "babel-jest": "~24.9.0",
    "conventional-changelog-cli": "~2.0.31",
    "husky": "~3.1.0",
    "jest": "~24.9.0",
    "tslint": "~5.20.1",
    "typescript": "~3.7.3"
  }
}
